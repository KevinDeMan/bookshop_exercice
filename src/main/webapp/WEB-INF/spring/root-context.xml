<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	
	<!-- Based on getter and setter -->
	<bean id="greetingService1" class="com.realdolmen.bookshop.services.GreetingServiceImpl">
		<property name="message" value="Hello, World!"/>
	</bean>
	
	<!--  Based on constructor -->
	<bean id="greetingService2" class="com.realdolmen.bookshop.services.GreetingServiceImpl">
		<constructor-arg value="Welcolme to Spring."></constructor-arg>
	</bean>
		
</beans>
